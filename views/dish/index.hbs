<div class="container-fluid">
    <div class="row">
        <div class="col-xl-2 col-md-4">
            <H1 class="text-white mb-4">Quản lý</H1>
            <div class="card bg-primary text-white">
                <button type="button" class="btn btn-primary btn-lg"><a class="text-white" href="/home">Bàn</a></button>
            </div>
            <div class="card bg-primary text-white">
                <button type="button" class="btn btn-primary btn-lg"><a class="text-white" href="/order">Đơn đặt bàn</a>
                </button>
            </div>
            <div class="card bg-primary text-white">
                <button type="button" class="btn btn-primary btn-lg"><a class="text-white" href="/category">Thể loại</a>
                </button>
            </div>
            <div class="card bg-primary text-white">
                <button type="button" class="btn btn-danger btn-lg"><a class="text-white" href="/dish">Món ăn</a>
                </button>
            </div>
            <div class="card bg-primary text-white">
                <button type="button" class="btn btn-primary btn-lg"><a class="text-white" href="/notification">Thông
                    báo</a>
                </button>
            </div>
            <div class="card bg-primary text-white">
                <button type="button" class="btn btn-primary btn-lg"><a class="text-white" href="#">Thống kê</a>
                </button>
            </div>
            <div class="card bg-primary text-white">
                <button type="button" class="btn btn-primary btn-lg"><a class="text-white" href="/clientAccount">Tài
                    khoản nhân viên</a></button>
            </div>
        </div>
        <div class="col-xl-10 col-md-4">
            <div class="container-fluid mt-5">
                <div class="card mb-4">
                    <div class="card-header">
                        Danh sách món ăn
                        <button type="button" class="btn btn-primary btn float-right"><a class="text-white"
                                                                                         href="/dish/addDish">Thêm món
                            ăn</a></button>
                    </div>
                    <table class="table">
                        <thead class="thead-light">
                        <tr>
                            <!--                            <th scope="col">Stt</th>-->
                            <th scope="col">Ảnh</th>
                            <th scope="col">Tên món ăn</th>
                            <th scope="col">Thể loại</th>
                            <th scope="col">Giá tiền</th>
                            <th scope="col">Thời gian</th>
                            <th scope="col">Thành phần</th>
                            <th scope="col">Chỉnh sửa</th>
                            <th scope="col">Xóa</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#each dish}}
                            <tr>
                                <td style="width:150px; height: 100px "><img style="object-fit: cover;"
                                                                             src="{{this.urlImage}}" height=100
                                                                             width=150></td>
                                <td>{{this.nameDish}}</td>
                                <td>{{this.category}}</td>
                                <td>{{this.time}} phút</td>
                                <td>{{this.price}} VND</td>
                                <td>{{this.ingredient}}</td>

                            </tr>
                        {{/each}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
